    })(window,document,'script','dataLayer','GTM-TSD7RCD4');</script>
    <!-- End Google Tag Manager -->
    
    {% block extra_css %}{% endblock %}
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TSD7RCD4"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <!-- Skip to Content Link -->
    <a href="#main-content" class="skip-link">Pular para o conteúdo principal</a>
    
    <!-- ARIA Live Region for Dynamic Content -->
    <div id="aria-live-region" class="sr-only" aria-live="polite" aria-atomic="true"></div>
    
    <!-- Header -->
    <header class="header" id="header">
        <div class="container">
            <div class="navbar">
                <div class="navbar-brand">
                    <a href="/" aria-label="Ir para página inicial">
                        <img src="{{ asset('images/logo.svg') }}" alt="{{ siteName }}" class="logo-img" loading="eager" decoding="async" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                        <span class="logo-text" style="display:none;">{{ siteName }}</span>
                    </a>
                </div>
                <nav class="navbar-menu" id="navbar-menu" role="navigation" aria-label="Navegação principal">
                    <a href="/" class="nav-link" aria-current="page">Início</a>
                    <a href="/#servicos" class="nav-link">Serviços</a>
                    <a href="/#sobre" class="nav-link">Sobre</a>
                    <a href="/#contato" class="nav-link">Contato</a>
                    <a href="https://wa.me/5511960913933" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-small" aria-label="Fale conosco no WhatsApp">Fale Conosco</a>
                    <div class="online-indicator" aria-label="Status de atendimento">
                        <span class="indicator-dot" aria-hidden="true"></span>
                        <span class="indicator-text">Atendimento Online</span>
                    </div>
                </nav>
                <button class="navbar-toggle" id="navbar-toggle" aria-label="Abrir menu de navegação" aria-expanded="false" aria-controls="navbar-menu">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main id="main-content" role="main">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="footer" role="contentinfo">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-logo">
                        <img src="{{ asset('images/logo.svg') }}" alt="{{ siteName }}" class="logo-img-footer" loading="lazy" decoding="async" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                        <span class="logo-text-footer" style="display:none;">{{ siteName }}</span>
                    </div>
                    <p class="footer-description">{{ description }}</p>
                </div>
                <div class="footer-section">
                    <h3 class="footer-title">Contato</h3>
                    <ul class="footer-list">
                        <li>
                            <a href="tel:{{ phone }}" class="footer-link">
                                <svg class="footer-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                {{ phone }}
                            </a>
                        </li>
                        <li>
                            <a href="mailto:{{ email }}" class="footer-link">
                                <svg class="footer-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                {{ email }}
                            </a>
                        </li>
                        <li class="footer-link">
                            <svg class="footer-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            {{ address }}
                        </li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3 class="footer-title">Horário de Funcionamento</h3>
                    <ul class="footer-list">
                        {% for schedule in workingHours %}
                        <li class="footer-schedule">
                            <span>{{ schedule.days }}</span>
                            <span>{{ schedule.hours }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; {{ "now"|date("Y") }} {{ siteName }}. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Floating CTA Button -->
    <a href="https://wa.me/5511960913933" target="_blank" rel="noopener noreferrer" class="floating-cta" aria-label="Fale conosco no WhatsApp">
        <svg fill="currentColor" viewBox="0 0 24 24" class="whatsapp-icon">
