{% extends "base.twig" %}

{% block title %}Limpeza de Fachadas Alta Qualidade em SP - {{ siteName }}{% endblock %}

{% block content %}
<!-- Rotating Keywords Bar -->
<section class="rotating-keywords" aria-label="Palavras-chave de serviços">
    <div class="container">
        <div class="keywords-wrapper" role="list">
            {% for keyword in rotatingKeywords %}
            <a href="{{ keyword.href }}" class="keyword-link" role="listitem">{{ keyword.text }}</a>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-background">
        <div class="hero-overlay"></div>
        <div class="hero-overlay-dark"></div>
        <img src="{{ asset('images/hero-bg.jpg') }}" alt="Limpeza de fachada" class="hero-bg-image" loading="eager" fetchpriority="high" decoding="async" onerror="this.style.display='none';">
    </div>
    <div class="container">
        <div class="hero-content">
            <span class="hero-badge">Transformando Projetos em Realidade</span>
            <h1 class="hero-title">
                Limpeza de Fachadas <br>
                <span class="hero-highlight">Alta Qualidade em SP</span>
            </h1>
            <p class="hero-description">{{ hero.description }}</p>
            <div class="hero-buttons">
                <a href="https://wa.me/5511960913933" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-hero">
                    <svg class="btn-icon" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z" />
                    </svg>
                    Fale Conosco
                </a>
                <a href="#servicos" class="btn btn-secondary btn-hero">
                    <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Nossos Serviços
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Portfolio Section -->
<section class="portfolio-section" aria-labelledby="portfolio-heading">
    <div class="container">
        <div class="section-header">
            <h2 id="portfolio-heading" class="section-title">Nosso Portfólio</h2>
            <p class="section-subtitle">Conheça alguns dos nossos trabalhos realizados</p>
        </div>
        <div class="portfolio-slider" id="portfolio-slider" role="region" aria-label="Galeria de portfólio">
            <div class="portfolio-track">
                {% for image in portfolioImages %}
                <div class="portfolio-slide">
                    <div class="portfolio-item" data-image-index="{{ loop.index0 }}">
                        <div class="image-skeleton" aria-hidden="true"></div>
                        <img src="{{ asset(image.src) }}" alt="{{ image.alt }}" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
                    </div>
                </div>
                {% endfor %}
            </div>
            <button class="slider-btn slider-btn-prev" aria-label="Anterior">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <button class="slider-btn slider-btn-next" aria-label="Próximo">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section" aria-labelledby="benefits-heading">
    <div class="container">
        <div class="benefits-header">
            <div class="benefits-header-content">
                <span class="benefits-badge">Nossos Diferenciais</span>
                <h2 id="benefits-heading" class="benefits-title">Por que escolher nossos serviços?</h2>
                <p class="benefits-subtitle">
                    <strong>Qualidade, Segurança e Tranquilidade</strong><br>
                    Em cada etapa do serviço prestado.
                </p>
            </div>
        </div>
        <div class="benefits-grid" role="list">
            {% for key, benefit in whyChooseUs %}
            <div class="benefit-card" role="listitem" tabindex="0" data-benefit="{{ key }}">
                <div class="benefit-icon-wrapper">
                    {% if key == 'investimento' %}
                    <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {% elseif key == 'equipe' %}
                    <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    {% elseif key == 'seguranca' %}
                    <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    {% else %}
                    <svg class="benefit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {% endif %}
                </div>
                <h3 class="benefit-title">{{ benefit.title }}</h3>
                <ul class="benefit-list">
                    {% for item in benefit.items %}
                    <li class="benefit-item">
                        <svg class="benefit-check" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        <span>{{ item }}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="servicos" class="services-section" aria-labelledby="services-heading">
    <div class="container">
        <div class="section-header">
            <h2 id="services-heading" class="section-title">Especialistas em Limpeza de Fachadas</h2>
            <p class="section-subtitle">Oferecemos Soluções Completas e Especializadas para Limpeza de Fachadas</p>
        </div>
        
        {% set facadeServices = services|filter(s => s.id != 8) %}
        {% set safetyService = services|filter(s => s.id == 8)|first %}
        
        <!-- Facade Services -->
        <div class="services-grid">
            {% for service in facadeServices %}
            <div class="service-card" id="servico-{{ service.id }}">
                <div class="service-image">
                    <div class="image-skeleton" aria-hidden="true"></div>
                    <img src="{{ asset(service.image) }}" alt="{{ service.title }}" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
                </div>
                <div class="service-content">
                    <h3 class="service-title">{{ service.title }}</h3>
                    <p class="service-description">{{ service.description }}</p>
                    <ul class="service-features">
                        {% for feature in service.features %}
                        <li class="service-feature">
                            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            {{ feature }}
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Safety Service (Ancoragem) -->
        {% if safetyService %}
        <div id="servicos-ancoragem" class="safety-service">
            <div class="safety-service-header">
                <h3 class="safety-service-title">{{ safetyService.title }}</h3>
                <p class="safety-service-subtitle">Segurança e conformidade para sua equipe</p>
                <p class="safety-service-description">{{ safetyService.description }}</p>
            </div>
            
            <div class="safety-service-content">
                <div class="safety-service-left">
                    <div class="safety-service-image">
                        <div class="image-skeleton" aria-hidden="true"></div>
                        <img src="{{ asset(safetyService.image) }}" alt="{{ safetyService.title }}" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
                    </div>
                    
                    {% if safetyService.gallery %}
                    <div class="safety-gallery" id="safety-gallery">
                        <div class="gallery-track">
                            {% for item in safetyService.gallery %}
                            <div class="gallery-slide">
                                <div class="gallery-item">
                                    <div class="image-skeleton" aria-hidden="true"></div>
                                    <img src="{{ asset(item.image) }}" alt="{{ item.title }}" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
                                    <div class="gallery-overlay">
                                        <h4>{{ item.title }}</h4>
                                        <p>{{ item.description }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <!-- Botões de navegação posicionados no meio vertical -->
                        <button class="gallery-btn gallery-btn-prev" aria-label="Anterior">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                            </svg>
                        </button>
                        <button class="gallery-btn gallery-btn-next" aria-label="Próximo">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </button>
                        <!-- Indicadores embaixo -->
                        <div class="gallery-indicators">
                            {% for item in safetyService.gallery %}
                            <button class="gallery-indicator" data-slide="{{ loop.index0 }}" aria-label="Slide {{ loop.index }}"></button>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Certifications -->
                    <div class="safety-info-card">
                        <h4 class="info-card-title">
                            <svg class="info-card-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            Certificações e Normas
                        </h4>
                        <ul class="info-card-list">
                            <li>NR-35 - Trabalho em Altura</li>
                            <li>NBR 16325 - Postes de Linha de Vida</li>
                            <li>ASTM A351 - Aço Inox</li>
                        </ul>
                    </div>

                    <!-- Documentation -->
                    <div class="safety-info-card">
                        <h4 class="info-card-title">
                            <svg class="info-card-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Documentação Técnica Completa
                        </h4>
                        <ul class="info-card-list">
                            <li>ART de Projeto e Instalação</li>
                            <li>Laudo de Teste de Qualidade e Conformidade</li>
                            <li>Ensaio de Arrancamento Estático com Laudo</li>
                            <li>Numeração com Lacres e Documentação Fotográfica</li>
                            <li>Seguro de Responsabilidade Técnica</li>
                        </ul>
                    </div>

                    <!-- Guarantees -->
                    <div class="safety-info-card">
                        <h4 class="info-card-title">
                            <svg class="info-card-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            Garantias e Segurança
                        </h4>
                        <ul class="info-card-list">
                            <li>Engenharia Responsável pelo Projeto</li>
                            <li>Memorial de Cálculo Detalhado</li>
                            <li>Certificação NR-35</li>
                        </ul>
                    </div>
                </div>

                <div class="safety-service-right">
                    <h4 class="safety-features-title">O que oferecemos:</h4>
                    <div class="safety-features-list">
                        {% for feature in safetyService.features %}
                        <div class="safety-feature-card">
                            <div class="safety-feature-icon">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <div class="safety-feature-content">
                                <h5 class="safety-feature-title">{{ feature }}</h5>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</section>

<!-- Metrics Section -->
<section class="metrics-section" aria-label="Estatísticas da empresa">
    <div class="container">
        <div class="metrics-grid" role="list">
            {% for metric in metrics %}
            <div class="metric-card" role="listitem">
                <div class="metric-value" aria-label="{{ metric.value }}{% if metric.id == 'satisfaction' %}%{% endif %}">
                    {{ metric.value }}{% if metric.id == 'satisfaction' %}%{% endif %}
                </div>
                <div class="metric-label">{{ metric.label }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- About Section -->
<section id="sobre" class="about-section" aria-labelledby="about-heading">
    <div class="container">
        <div class="about-content">
            <div class="about-left">
                <div class="about-card">
                    <div class="about-card-header">
                        <div class="about-card-icon">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <h3 class="about-card-title">Missão</h3>
                    </div>
                    <p class="about-card-text">{{ about.mission }}</p>
                </div>

                <div class="about-card">
                    <div class="about-card-header">
                        <div class="about-card-icon">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </div>
                        <h3 class="about-card-title">Visão</h3>
                    </div>
                    <p class="about-card-text">{{ about.vision }}</p>
                </div>

                <div class="about-card">
                    <div class="about-card-header">
                        <div class="about-card-icon">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                        </div>
                        <h3 class="about-card-title">Valores</h3>
                    </div>
                    <div class="values-grid">
                        {% for value in about.values %}
                        <div class="value-item">
                            <svg class="value-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>{{ value }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="about-right">
                <div class="about-image">
                    <div class="image-skeleton" aria-hidden="true"></div>
                    <img src="{{ asset(about.image) }}" alt="Sobre nós" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Clients Section -->
<section class="clients-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Empresas que Confiam em Nosso Trabalho</h2>
            <p class="section-subtitle">Atendemos com excelência empresas de diversos segmentos</p>
        </div>
        <div class="clients-image">
            <div class="image-skeleton" aria-hidden="true"></div>
            <img src="{{ asset('images/clientes.jpg') }}" alt="Logotipos dos nossos clientes" loading="lazy" decoding="async" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';">
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contato" class="contact-section" aria-labelledby="contact-heading">
    <div class="container">
        <div class="section-header">
            <h2 id="contact-heading" class="section-title">Entre em Contato</h2>
            <p class="section-subtitle">Estamos Prontos para Atender suas Necessidades em Limpeza de Fachadas</p>
        </div>

        <div class="contact-grid">
            <div class="contact-card">
                <div class="contact-card-header">
                    <div class="contact-card-icon">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <h3 class="contact-card-title">Telefone</h3>
                </div>
                <a href="tel:{{ phone }}" class="contact-card-link">{{ phone }}</a>
            </div>

            <div class="contact-card">
                <div class="contact-card-header">
                    <div class="contact-card-icon">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <h3 class="contact-card-title">Email</h3>
                </div>
                <a href="mailto:{{ email }}" class="contact-card-link">{{ email }}</a>
            </div>

            <div class="contact-card">
                <div class="contact-card-header">
                    <div class="contact-card-icon">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="contact-card-title">Horário</h3>
                </div>
                <p class="contact-card-text">{{ contact.workingHours }}</p>
            </div>
        </div>

        <div class="contact-area-card">
            <div class="contact-area-header">
                <div class="contact-card-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
